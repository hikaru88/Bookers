<main>
  <% if flash[:notice] %>
    <div class="aleart aleart-primary"><%= flash[:notice] %></div>
  <% end %>

  <section class="show">
    <h1>Books</h1>
    <table>
      <tr>
        <th>Title</th>
        <th>Body</th>
      </tr>
    <% @books.each do |book| %>
      <tr>
        <td class="title"><%= book.title %></td>
        <td class="body"><%= book.body %></td>
        <td class="button"><a class="link" <%= link_to "Show", book_path(book.id) %></td>
        <td class="button"><a class="link" <%= link_to "Edit", edit_book_path(book.id) %></td>
        <td class="button"><a class="link" <%= link_to "Delete", book_path(book.id), method: :delete %></td>
      </tr>
    <% end %>
    </table>
  </section>

  <section class="create">
    <h1>New book</h1>
    <%= form_for(@book) do |f| %>
    <p style="font-size: 13px;">Title</p>
    <%= f.text_field :title %>

    <p style="font-size: 13px;">Body</p>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book', :class=>"create_button" %>

    <% end %>
  </section>
</main>
